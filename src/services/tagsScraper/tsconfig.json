{
	"compilerOptions": {
		"strict": true,
		"declaration": true,
		"checkJs": true,
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declarationMap": true,
    "paths": {
      "@packages/*": ["packages/*"]
    },
		"baseUrl": "./src",
		"outDir": "dist",
		"target": "ES2022",
		"module": "CommonJS",
		"noImplicitAny": true,
    "resolveJsonModule": true
	},
	"include": ["./src"],
	"exclude": ["node_modules"]
}